<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        tilesource="Mapnik"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </org.osmdroid.views.MapView>

    <Button
        android:id="@+id/center_button"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Center"
        app:layout_constraintTop_toTopOf="@id/mapview" />

    <Button
        android:id="@+id/all"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="All"
        app:layout_constraintTop_toBottomOf="@+id/center_button" />

    <Button
        android:id="@+id/none"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="None"
        app:layout_constraintTop_toBottomOf="@+id/all" />

    <Button
        android:id="@+id/kikoto"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Kikötő"
        app:layout_constraintTop_toBottomOf="@+id/none" />

    <Button
        android:id="@+id/strand"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Strand"
        app:layout_constraintTop_toBottomOf="@+id/kikoto" />

    <Button
        android:id="@+id/hun"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Magyar"
        app:layout_constraintBottom_toBottomOf="@+id/strand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapview"
        app:layout_constraintVertical_bias="0.17" />

    <Button
        android:id="@+id/eng"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="English"
        app:layout_constraintBottom_toBottomOf="@+id/strand"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hun"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/test_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test_text"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/strand" />

</androidx.constraintlayout.widget.ConstraintLayout>